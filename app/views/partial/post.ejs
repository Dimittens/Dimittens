<!DOCTYPE html>
<html lang="pt-br">
<head>
    <!-- Metadados -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Postagens da Comunidade</title>

    <!-- Bootstrap CSS incluído individualmente -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Seu CSS personalizado (se houver) -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../partial/header') %>

    <div class="container mt-4">
        <% if (message) { %>
            <div class="alert alert-success"><%= message %></div>
        <% } %>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Postagens da Comunidade</h1>
            <a href="/community/<%= communityId %>/posts/new" class="btn btn-primary">+ Criar Nova Postagem</a>
        </div>

        <% if (posts.length > 0) { %>
            <div class="row">
                <% posts.forEach(post => { %>
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <% if (post.IMAGEM_POSTAGEM) { %>
                                <img src="/uploads/<%= post.IMAGEM_POSTAGEM %>" class="card-img-top" alt="Imagem do post">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= post.TITULO_POSTAGEM %></h5>
                                <p class="card-text"><%= post.CONTEUDO_POSTAGEM.substring(0, 100) %>...</p>
                                <a href="/community/<%= communityId %>/posts/<%= post.ID_POSTAGEM %>" class="btn btn-outline-primary">Leia mais</a>
                            </div>
                            <div class="card-footer text-muted">
                                <small>Postado em <%= new Date(post.DATA_POSTAGEM).toLocaleDateString() %></small>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-muted">Nenhuma postagem encontrada nesta comunidade.</p>
        <% } %>
    </div>

    <!-- Bootstrap JS e dependências (se necessário) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
